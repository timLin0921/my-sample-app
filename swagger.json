{
  "swaggerDefinition": {
    "openapi": "3.0.0",
    "info": {
      "title": "My Sample App",
      "version": "1.0.0",
      "description": "API with Swagger doc",
      "contact": {
        "email": ""
      }
    },
    "servers": [
      {
        "url": "https://localhost:3000/api",
        "description": "Local server"
      }
    ],
    "paths": {
      "/register": {
        "post": {
          "summary": "Register",
          "description": "user register with email.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RegisterInput"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Register Successful",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Success"
                  }
                }
              }
            },
            "406": {
              "description": "Register Fail",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        }
      },
      "/login": {
        "post": {
          "summary": "Login.",
          "description": "user login with email and password.",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginInput"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "login successful",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/LoginSucc"
                  }
                }
              }
            },
            "401": {
              "description": "login fail!",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        }
      },
      "/logout": {
        "get": {
          "summary": "Logout",
          "responses": {
            "200": {
              "description": "Logout successful",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Success"
                  }
                }
              }
            },
            "500": {
              "description": "Uncaught exception Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        }
      },
      "/user/profile": {
        "get": {
          "summary": "Get User Profile",
          "security": [{"JWT": []}],
          "responses": {
            "200": {
              "description": "Successful",
              "content": {
                "application/json": {
                  "schema": {
                    "properties": {
                      "status": {
                        "type": "boolean",
                        "example": true
                      },
                      "message": {
                        "type": "string",
                        "example": "Successful"
                      },
                      "data": {
                        "type": "object",
                        "$ref": "#/components/schemas/UserProfile"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorization",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            },
            "500": {
              "description": "Uncaught exception Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        },
        "post": {
          "summary": "Reset user name",
          "security": [{"JWT": []}],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "Tommy"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Success"
                  }
                }
              }
            },
            "406": {
              "description": "Reset user name Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            },
            "500": {
              "description": "Uncaught exception Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        }
      },
      "/reset/password": {
        "post": {
          "summary": "Reset Password",
          "security": [{"JWT": []}],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "pass": {
                      "type": "string",
                      "example": "Tommy"
                    },
                    "newPass": {
                      "type": "string",
                      "example": "Tommy"
                    },
                    "confirmNewPass": {
                      "type": "string",
                      "example": "Tommy"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Success"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorization",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            },
            "406": {
              "description": "Reset Password Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            },
            "500": {
              "description": "Uncaught exception Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        }
      },
      "/resend/email/verification": {
        "get": {
          "summary": "Resend mailbox verification",
          "security": [{"JWT": []}],
          "responses": {
            "200": {
              "description": "Successful",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Success"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorization",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            },
            "500": {
              "description": "Uncaught exception Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        }
      },
      "/statistics/data": {
        "get": {
          "summary": "Dashboard Data",
          "description": "user statistics data & user database dashboard",
          "security": [{"JWT": []}],
          "responses": {
            "200": {
              "description": "return user statistics data",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/StatisticsData"
                  }
                }
              }
            },
            "401": {
              "description": "Unauthorization",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            },
            "500": {
              "description": "Uncaught exception Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/Fail"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "RegisterInput": {
          "properties": {
            "name": {
              "type": "string",
              "example": "John"
            },
            "email": {
              "type": "string",
              "example": "xxx@gamil.com"
            },
            "password": {
              "type": "string",
              "example": "AaZz@123"
            },
            "rePassword": {
              "type": "string",
              "example": "AaZz@123"
            }
          },
          "required": ["name", "email", "password", "rePassword"]
        },
        "Success": {
          "properties": {
            "status": {
              "type": "boolean",
              "example": true
            },
            "message": {
              "type": "string",
              "example": "Successful"
            }
          }
        },
        "LoginInput": {
          "properties": {
            "email": {
              "type": "string",
              "example": "xxx@gmail.com"
            },
            "password": {
              "type": "string",
              "example": "QqAaZz!@#123"
            }
          },
          "required": ["email", "password"]
        },
        "LoginSucc": {
          "properties": {
            "status": {
              "type": "boolean",
              "example": true
            },
            "message": {
              "type": "string",
              "example": "Successful"
            },
            "token": {
              "type": "string",
              "example": "eyJhbGciOiJIUzI....."
            }
          },
          "required": ["status", "message", "token"]
        },
        "Fail": {
          "properties": {
            "status": {
              "type": "boolean",
              "example": false
            },
            "errors": {
              "type": "array",
              "items": {
                "properties": {
                  "message": {
                    "type": "string",
                    "example": "Fail"
                  }
                }
              }
            }
          },
          "required": ["status", "message"]
        },
        "User": {
          "properties": {
            "_id": {
              "type": "string",
              "example": "61c696bb0dfed004931d8152"
            },
            "name": {
              "type": "string",
              "example": "John"
            },
            "email": {
              "type": "string",
              "example": "xxx@gmail.com"
            },
            "createDate": {
              "type": "date",
              "example": "2021-12-25T03:57:47.631Z"
            },
            "loginTimes": {
              "type": "number",
              "example": 10
            },
            "session": {
              "type": "object",
              "properties": {
                "createDate": {
                  "type": "date",
                  "example": "2021-12-27T14:35:58.089Z"
                }
              }
            }
          }
        },
        "UserProfile": {
          "properties": {
            "name": {
              "type": "string",
              "example": "John"
            },
            "email": {
              "type": "string",
              "example": "xxx@gmail.com"
            }
          }
        },
        "Users": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/User"
          }
        },
        "StatisticsData": {
          "properties": {
            "status": {
              "type": "boolean",
              "example": false
            },
            "users": {
              "type": "array",
              "$ref": "#/components/schemas/Users"
            },
            "signUpNums": {
              "type": "number",
              "example": 8
            },
            "sessionMA": {
              "type": "float",
              "example": "0.57"
            },
            "sessActiveNumToday": {
              "type": "number",
              "example": 3
            }
          }
        },
        "Error": {
          "properties": {
            "message": {
              "type": "string",
              "example": "not found email/password datas, please help to check!"
            }
          }
        },
        "Errors": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/Error"
          }
        }
      },
      "securitySchemes": {
        "JWT": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    }
  },
  "apis": ["./routes/api.js"]
}
