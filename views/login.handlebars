<section class="form-section container mx-auto">
  <div class="login-container shadow-lg">
    <div class="row w-100 m-0">
      <div class="col-md-12 col-12 p-5 col-left">
        <form action="/user/login" method="post">
          <div class="form-group text-center">
            <h2 class="text-info mt-2">Sign In</h2>
          </div>
          <div class="form-group">
            <label for="email" class="text-secondary">Email</label>
            <input type="email" name="email" id="email" class="form-control">
          </div>
          <div class="form-group">
            <label for="password" class="text-secondary">Password</label>
            <input type="password" name="password" id="password" class="form-control">
          </div>
          <button type="submit" class="w-100 animation-info-btn btn-block animation-btn mt-1">Sign In</button>
          <a href="/user/register" class="animation-black-btn btn-block animation-btn mt-3">Sign Up</a>
        </form>
        <div class="text-center mt-5 mb-4 position-relative separate-line">
          <hr>
          <small class="text-muted">or</small>
        </div>
        <div class="login-partners-icons">
          <h4 class="text-center">
            <a class="mr-3" href="/auth/facebook"><i class="fab fa-facebook mr-1"></i></a>
            <a href="/auth/google"><i class="fab fa-google "></i></a>
          </h4>
        </div>
      </div>
    </div>
  </div>
</section>