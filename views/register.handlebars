<section class="mx-auto">
  <div class="register-container shadow-lg">
    <div class="row w-100 m-0">
      <div class="col-md-12 col-12 p-5 col-left">
        <form action="/user/register" method="post">
          <div class="form-group text-center">
            <h2 class="text-info mt-2">Sign Up</h2>
          </div>
          {{> messages}}
          <div class="form-group">
            <label for="name" class="text-secondary">Name</label>
            <input type="text" name="name" id="name" class="form-control" value="{{name}}">
          </div>
          <div class="form-group">
            <label for="email" class="text-secondary">Email</label>
            <input type="email" name="email" id="email" class="form-control" value="{{email}}">
          </div>
          <div class="form-group">
            <label for="password" class="text-secondary">Password</label>
            <input type="password" name="password" id="password" class="form-control" value="{{password}}">
          </div>
          <div class="form-group">
            <label for="re-password" class="text-secondary">Confirm Password</label>
            <input type="password" name="rePassword" id="re-password" class="form-control" value="{{rePassword}}">
          </div>
          <button type="submit" class="btn-block animation-btn animation-info-btn w-100 mt-1">Sign Up</button>
        </form>
        <a href="/user/login" class="animation-btn animation-black-btn btn-block mt-3">Sign In</a>
        <div class="text-center mt-5 mb-4 position-relative separate-line">
            <small class="text-muted">Facebook | Google</small>
          <hr>
        </div>
        <div class="login-partners-icons">
          <h4 class="text-center">
            <a href="/auth/facebook"><i class="fab fa-facebook mr-1 text-info"></i></a>
            <a href="/auth/google"><i class="fab fa-google text-info"></i></a>
          </h4>
        </div>
      </div>
    </div>
  </div>
</section>